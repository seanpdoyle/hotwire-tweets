<%= link_to user_path(retweet.creator, anchor: dom_id(retweet)), class: "flex text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 outline-none focus:ring" do %>
  <span class="border rounded-full bg-blue-500 p-1 mr-1">
    <%= render partial: "users/avatar", object: retweet.creator, as: :user %>
  </span>

  <%= retweet.creator.username %> retweeted one of your tweets.
<% end %>
