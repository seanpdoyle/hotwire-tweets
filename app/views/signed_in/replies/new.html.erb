<%= turbo_frame_tag "dialog" do %>
  <h1>New Reply</h1>

  <section class="w-full lg:w-1/3">
    <%= form_with model: @reply, url: tweet_replies_path(@tweet), id: dom_id(@tweet, :new_reply), class: "grid cols-2 gap-y-2 p-6", data: { turbo_frame: "_top" } do |form| %>
      <%= render partial: "tweets/form", object: form %>
    <% end %>
  </section>
<% end %>
